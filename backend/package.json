{
  "name": "backend",
  "version": "1.0.0",
  "description": "MERN Stack Recipe Book Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "dev": "npm run server",
    "test": "jest --config jest.config.js --runInBand --detectOpenHandles",
    "test:watch": "jest --config jest.config.js --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./backend/test/setup.js",
    "globalTeardown": "./backend/test/teardown.js",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "keywords": [
    "mern",
    "recipe",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.4",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.4"
  }
}
